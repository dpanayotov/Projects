<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="scrum-unit">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>bg.uni.sofia.fmi.web.scrum.model.Person</class>
		<class>bg.uni.sofia.fmi.web.scrum.model.Planning</class>
		<class>bg.uni.sofia.fmi.web.scrum.model.Task</class>
		<class>bg.uni.sofia.fmi.web.scrum.model.Team</class>
		<properties>
			<property name="eclipselink.deploy-on-startup" value="True" />
			<property name="eclipselink.ddl-generation" value="create-or-extend-tables" />
			<property name="eclipselink.logging.level" value="SEVERE" />
			<property name="eclipselink.jpql.parser"
				value="org.eclipse.persistence.queries.ANTLRQueryBuilder" />
			<!-- <property name="eclipselink.cache.shared.default" value="false"/> -->
		</properties>
	</persistence-unit>
</persistence>